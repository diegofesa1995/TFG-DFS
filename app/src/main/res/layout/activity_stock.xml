<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diego.myapplication.Activities.Stock">

    <android.support.v7.widget.Toolbar
        android:id="@+id/appbaralmacen"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#003366"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/cabeceracant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbaralmacen"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Cantidad"/>

    <TextView
        android:id="@+id/cabeceraunidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbaralmacen"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="â‚¬/Unidad"/>

    <ListView
        android:id="@+id/listviewstock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cabeceracant">

    </ListView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/anadirarticulostock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cuenta"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@android:drawable/ic_input_add"
         />

</RelativeLayout>