            <TextView
                android:id="@+id/textviewnombreproductoseleccionado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Nombre"
                android:textSize="10dp" />

        </RelativeLayout>


    </RelativeLayout>

    <ListView
