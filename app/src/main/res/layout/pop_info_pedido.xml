                android:textSize="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layouttextiva"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/layouttextviewimporteiva"
            android:layout_toRightOf="@id/layouttextviewbaseimponible">

            <TextView
                android:id="@+id/textviewiva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="IVA"
                android:textSize="10dp" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
